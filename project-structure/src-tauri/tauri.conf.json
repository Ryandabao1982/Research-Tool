{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "KnowledgeBase Pro",
        "version": "2.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "ask": true,
                "confirm": true,
                "message": true,
                "open": true,
                "save": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "**"
                ]
            },
            "path": {
                "all": true
            },
            "protocol": {
                "asset": true,
                "assetScope": [
                    "**"
                ]
            }
        },
        "bundle": {
            "active": true,
            "category": "Productivity",
            "copyright": "Â© 2025 KnowledgeBase Pro Team",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [],
            "identifier": "pro.knowledgebase.app",
            "longDescription": "AI-powered desktop knowledge management application with modular plugin architecture",
            "macos": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "AI-powered knowledge management",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "wix": {
                    "template": "main.wxs"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 800,
                "resizable": true,
                "title": "KnowledgeBase Pro",
                "width": 1200,
                "transparent": true,
                "decorations": false
            }
        ]
    }
}