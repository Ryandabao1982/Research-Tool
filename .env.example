# Environment Variables for KnowledgeBase Pro
# Copy this file to .env and fill in your actual values

# Development Configuration
NODE_ENV=development
VITE_DEV_SERVER_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=sqlite:knowledge_base.db?mode=rwc

# AI Provider Configuration
# Choose your preferred AI provider in Settings > AI
# Options: ollama, openai, anthropic, huggingface

# Ollama Configuration (for local AI)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODELS=phi3.1,gemma2:2b,codellama:7b

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# External Services Configuration
# Qdrant Vector Database (for semantic search)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Exa Search API (for web search)
EXA_API_KEY=your_exa_api_key_here

# Notion Integration (optional)
NOTION_API_TOKEN=your_notion_token_here

# Build Configuration
VITE_BUILD_ASSETS=/assets/
VITE_PUBLIC_DIR=public/

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:5173
SESSION_SECRET=your_session_secret_here

# Development Tools
ENABLE_REACT_DEVTOOLS=true
ENABLE_AI_CONSOLE=true